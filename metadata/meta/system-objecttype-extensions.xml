                <description xml:lang="x-default">Select from a list of supported payment gateways</description>
                <type>enum-of-string</type>
                <mandatory-flag>true</mandatory-flag>
                <select-multiple-flag>false</select-multiple-flag>
                <value-definitions>
                    <value-definition default="true">
                        <display xml:lang="x-default">KG Inicis</display>
                        <value>inicis</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">KCP</display>
                        <value>kcp</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Toss</display>
                        <value>toss</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">NICE</display>
                        <value>nice</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">KICC</display>
                        <value>kicc</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Danal</display>
                        <value>danal</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Smartro</display>
                        <value>smartro</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Settle Bank</display>
                        <value>settleBank</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">PAYJOA</display>
                        <value>payjoa</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">KAKAOPAY</display>
                        <value>kakaoPay</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">NaverPAY</display>
                        <value>naverPay</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">PAYCO</display>
                        <value>payco</value>
                    </value-definition>
                </value-definitions>
            </attribute-definition>

            <attribute-definition attribute-id="import_inicisPaymentMethods">
                <display-name xml:lang="x-default">Inicis Payment Methods</display-name>
                <description xml:lang="x-default">Hold the 'ctlr' key and select all applicable payment methods</description>
                <type>enum-of-string</type>
                <select-multiple-flag>true</select-multiple-flag>
                <value-definitions>
                    <value-definition>
                        <display xml:lang="x-default">Credit Card</display>
                        <value>card</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Live Transfer</display>

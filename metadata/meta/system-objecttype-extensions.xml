                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">Virtual Account</display>
                        <value>vbank</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">KAKAOPAY</display>
                        <value>kakaoPay</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">NaverPAY</display>
                        <value>naverPay</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">PAYCO</display>
                        <value>payco</value>
                    </value-definition>
                    <value-definition>
                        <display xml:lang="x-default">SamsungPAY</display>

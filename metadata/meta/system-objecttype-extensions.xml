<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="import_apiKey">
                <display-name xml:lang="x-default">Import API Key</display-name>
                <description xml:lang="x-default">API Key from the I'mport portal settings</description>
                <type>string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>

            <attribute-definition attribute-id="import_apiSecret">
                <display-name xml:lang="x-default">Import API Secret</display-name>
                <description xml:lang="x-default">API Secret from the I'mport portal settings</description>
                <type>password</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>

            <attribute-definition attribute-id="import_merchantID">
                <display-name xml:lang="x-default">Import Merchant ID</display-name>
                <description xml:lang="x-default">Merchant ID (MID) from the I'mport portal settings</description>
                <type>string</type>
                <mandatory-flag>true</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>


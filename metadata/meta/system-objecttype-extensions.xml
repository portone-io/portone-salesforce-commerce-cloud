            </attribute-definition>
        <custom-attribute-definitions>

        </group-definitions>            
            <attribute-group group-id="import_general">
                <display-name xml:lang="x-default">Import General Configs</display-name>
                <attribute attribute-id="import_apiKey"/>
                <attribute attribute-id="import_apiSecret"/>
                <attribute attribute-id="import_merchantID"/>
                <attribute attribute-id="import_paymentGateway"/>
            </attribute-group>

            <attribute-group group-id="import_inicisConfigs">
                <display-name xml:lang="x-default">Import Inicis Configs</display-name>
                <attribute attribute-id="import_inicisPaymentMethods"/>
                <attribute attribute-id="import_inicisMerchantID"/>
            </attribute-group>
        </group-definitions>
    </type-extension>
</metadata>
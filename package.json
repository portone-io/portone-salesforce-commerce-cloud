{
  "name": "int_iamport_sfra",
  "version": "1.0.0",
  "description": "Iamport LINK cartridge",
  "main": "index.js",
  "scripts": {
    "test": "sgmf-scripts --test test/unit/**/*.js",
    "cover": "sgmf-scripts --cover 'test/unit'",
    "lint:Js": "node ./node_modules/eslint/bin/eslint.js . -f junit > eslint.xml",
    "lint:css": "sgmf-scripts --lint css",
    "lint:js": "sgmf-scripts --lint js",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:fix": "sgmf-scripts --lint js --fix && sgmf-scripts --lint css --fix",
    "uploadCartridge": "sgmf-scripts --uploadCartridge int_iamport_sfra & sgmf-scripts --uploadCartridge int_iamport_core",
    "init:isml": "./node_modules/.bin/isml-linter --init",
    "lint:isml": "./node_modules/.bin/isml-linter",
    "build:isml": "./node_modules/.bin/isml-linter --build",
    "fix:isml": "./node_modules/.bin/isml-linter --autofix",
    "installation": "npm install && npm run webpackInstall",
    "webpackInstall": "node ./sfra-webpack-builder/installHandling/install.js",
    "dev": "./sfra-webpack-builder/node_modules/.bin/webpack --config ./sfra-webpack-builder/webpack.config.js --env dev --env local",
    "watch": "./sfra-webpack-builder/node_modules/.bin/webpack --config ./sfra-webpack-builder/webpack.config.js --env dev --watch --env local",
    "watch:lint": "./sfra-webpack-builder/node_modules/.bin/webpack --config ./sfra-webpack-builder/webpack.config.js --env dev --env useLinter --watch --env local",
    "watch:reload": "./sfra-webpack-builder/node_modules/.bin/webpack --config ./sfra-webpack-builder/webpack.config.js --env dev --watch --env local --env livereload"
  },
  "sfraBuilderConfig": "./sfraBuilderConfig",
  "dependencies": {
    "chromedriver": "^2.44.1",
    "cleave.js": "^1.0.2",
    "crypto-js": "^4.0.0",
    "css-loader": "^0.28.11",
    "jquery": "^3.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.5",
    "babel-preset-env": "^1.7.0",
    "chai": "^3.5.0",
    "chai-subset": "^1.6.0",
    "css-loader": "^0.28.11",
    "eslint": "^3.2.2",
    "eslint-config-airbnb-base": "^5.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^4.2.5",
    "isml-linter": "^5.26.4",
    "istanbul": "^0.4.4",
    "mocha": "^5.2.0",
    "module-alias": "^2.1.0",
    "node-sass": "^4.9.0",
    "postcss-loader": "^2.1.5",
    "proxyquire": "1.7.4",
    "sass-loader": "^7.0.3",
    "sgmf-scripts": "^2.0.0",
    "sinon": "^1.17.4",
    "stylelint": "^7.1.0",
    "stylelint-config-standard": "^12.0.0",
    "stylelint-scss": "^1.3.4"
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 10"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "",
      "pre-push": ""
    }
  },
  "paths": {
    "base": "../storefront-reference-architecture/cartridges/app_storefront_base/"
  }
}
